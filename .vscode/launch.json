    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Piccolo",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/piccolo",
            "preLaunchTask": "go generate"
        },
        		{
			"name": "Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/vscode-piccolo"
			]
		}
    ]
}